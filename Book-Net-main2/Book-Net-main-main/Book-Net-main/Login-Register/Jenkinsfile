pipeline {
    agent any

    tools {
        nodejs "NodeJS" // Ensure NodeJS is configured in Jenkins
    }

    environment {
        CLIENT_DIR = 'Book-Net-main2/Book-Net-main-main/Book-Net-main/Login-Register/client'
        SERVER_DIR = 'Book-Net-main2/Book-Net-main-main/Book-Net-main/Login-Register/server'
        TESTS_DIR  = 'Book-Net-main2/Book-Net-main-main/Book-Net-main/Login-Register/tests'
    }

    stages {
        stage('Install Server Dependencies') {
            steps {
                dir("${SERVER_DIR}") {
                    bat 'npm install'
                }
            }
        }

        stage('Install Client Dependencies') {
            steps {
                dir("${CLIENT_DIR}") {
                    bat 'npm install'
                }
            }
        }

        stage('Build Client') {
            steps {
                dir("${CLIENT_DIR}") {
                    bat 'npm run build'
                }
            }
        }

        stage('Run Server Unit Tests') {
            steps {
                dir("${SERVER_DIR}") {
                    // Ensure reports folder exists
                    bat 'mkdir reports || exit 0'
                    // Run server tests with JUnit reporter
                    bat 'npm test'
                }
            }
            post {
                always {
                    // Use wildcard to ensure XML is found
                    junit "${SERVER_DIR}/reports/*.xml"
                }
            }
        }

        stage('Run Client UI Tests') {
            steps {
                dir("${CLIENT_DIR}") {
                    // Ensure reports folder exists
                    bat 'mkdir reports || exit 0'
                    // Run Selenium WebDriver UI tests
                    bat 'npm run test:ui'
                }
            }
            post {
                always {
                    // Use wildcard in case multiple XML files exist
                    junit "${CLIENT_DIR}/reports/*.xml"
                }
            }
        }

        stage('Run Automation / BDD Tests') {
            steps {
                dir("${CLIENT_DIR}") {
                    bat 'mkdir reports || exit 0'
                    // Run Cucumber BDD tests with JUnit output
                    bat 'npm run test:automation'
                }
            }
            post {
                always {
                    junit "${CLIENT_DIR}/reports/*.xml"
                }
            }
        }
    }

    post {
        success {
            echo 'CI/CD pipeline completed successfully!'
        }
        failure {
            echo 'CI/CD pipeline failed.'
        }
    }
}

